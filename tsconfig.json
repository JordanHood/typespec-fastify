{
  "compilerOptions": {
    "target": "ES2022",
    "useDefineForClassFields": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "lib": [
      "ES2022"
    ],
    "rootDir": ".",
    "outDir": "dist",
    "sourceMap": true,
    "declaration": true,
    "skipLibCheck": true,
    "jsx": "preserve",
    "jsxImportSource": "@alloy-js/core",
    "strict": true
  },
  "include": [
    "src",
    "test/hello.test.ts",
    "test/test-host.ts",
    "test/e2e/helpers.ts",
    "test/e2e/spector.ts",
    "test/e2e/parameters/basic.e2e.ts",
    "test/e2e/parameters/path.e2e.ts",
    "test/e2e/parameters/query.e2e.ts",
    "test/e2e/parameters/body-optionality.e2e.ts"
  ],
  "exclude": [
    "test/e2e/generated",
    "examples",
    "temp"
  ]
}
