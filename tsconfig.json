{
  "compilerOptions": {
    "target": "ES2022",
    "useDefineForClassFields": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "lib": [
      "ES2022"
    ],
    "rootDir": "src",
    "outDir": "dist",
    "sourceMap": true,
    "declaration": true,
    "skipLibCheck": true,
    "jsx": "preserve",
    "jsxImportSource": "@alloy-js/core",
    "strict": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "examples",
    "temp"
  ]
}
